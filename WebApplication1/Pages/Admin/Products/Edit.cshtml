@page
@model WebApplication1.Pages.Admin.Products.EditModel
@{
}
<div class="col-md-8 mx-auto rounded border p-3" id="form">
    <h2 class="text-center mb-5">Edytuj Samochód</h2>

    @if (Model.errorMessage.Length > 0)
    {
        <div class="alert alert-warning alert-dismissible fade show">
            <strong>@Model.errorMessage</strong>
            <button type="button" class="btn-close"></button>
        </div>
    }
    else if (Model.successMessage.Length > 0)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <strong>@Model.successMessage</strong>
            <button type="button" class="btn-close"></button>
        </div>
    }

    <form method="post" enctype="multipart/form-data">
        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Id</label>
            <div class="col-sm-8">
                <input readonly class="form-control-plaintext" value="@Model.Product.Id">
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Nazwa</label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="ProductCre.Name">
                <span asp-validation-for="ProductCre.Name" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Kategoria</label>
            <div class="col-sm-8">
                <select class="form-select" asp-for="ProductCre.Category">
                    <option value="A">A Klasa</option>
                    <option value="B">B Klasa</option>
                    <option value="C">C Klasa</option>
                    <option value="D">D Klasa</option>
                    <option value="E">E Klasa</option>
                </select>
                <span asp-validation-for="ProductCre.Category" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Cena</label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="ProductCre.Price">
                <span asp-validation-for="ProductCre.Price" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Opis</label>
            <div class="col-sm-8">
                <textarea class="form-control" asp-for="ProductCre.Description"></textarea>
                <span asp-validation-for="ProductCre.Description" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-4 col-form-label"></label>
            <div class="col-sm-8">
                <img src="/products/@Model.Product.ImageFileName" width="150"/>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Zdjęcie</label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="ProductCre.ImageFile">
                <span asp-validation-for="ProductCre.ImageFile" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Utworzono</label>
            <div class="col-sm-8">
                <input readonly class="form-control-plaintext" value="@Model.Product.CratedAt.ToString("MM/dd/yyyy")">
            </div>
        </div>

        <div class="row mb-3">
            <div class="offset-sm-4 col-sm-4 d-grid">
                <button type="submit" class="btn btn-success">Zatwierdź</button>
            </div>
            <div class="col-sm-4 d-grid">
                <a class="btn btn-outline-danger" href="/Index">Anuluj</a>
            </div>
        </div>
    </form>
</div>
</div>
